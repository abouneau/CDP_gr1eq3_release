<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title> Sprints </title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <!-- Material Design Bootstrap -->
  <link rel="stylesheet" href="/css/mdb.min.css">
  <!-- Custom css -->
  <link rel="stylesheet" href="/css/style.css">
  <%- include('./navbar.ejs', {project: project}) %>
</head>

<body>
  <div class="inner-container rounded mb-0 col-lg-12">

    <h1> Sprints </h1>

    <a href="/projects/<%= project._id %>/sprints/create" class="btn btn-success"> Nouveau sprint </a>
    <div class="row">
      <% for(const sprint of sprints){ %>
      <div class="col-lg-12">

        <div class="row my-card rounded mb-0 <%=sprint._color%>" role="alert">
          <div class="col-lg-2">
            <a href="/projects/<%= project._id %>/sprints/<%=sprint._id%>">
              <h3><%=sprint._name%> </h3>
            </a>
          </div>
          <div class="col-lg-3">Du <%= sprint._beginDate %> au <%= sprint._endDate %></div>
          <div class="col-lg-2">Difficulté totale : <%=sprint._totalDifficulty%></div>
          <div class="col-lg-5 text-right">
            <!-- <a href="/projects/<%= project._id %>/sprints/<%= sprint._id %>/update" class="btn btn-sq-xs btn-primary">
              <i class="fas fa-pen"></i>
            </a> -->
            <form action="/projects/<%= project._id %>/sprints/<%= sprint._id %>/delete" method="POST"
              style="display: inline">
              <button type="submit" class="btn btn-sq-xs btn-danger"><i class="fas fa-trash-alt"></i></button>
            </form>
          </div>
          <!-- <form action="/projects/<%= project._id %>/sprints/<%=sprint._id%>/linkIssue" method="POST">
            <select name="issueList" id="issueList" size="1" selected="default">
              <option value="default"> User story à lier </option>
              <% for( let issue of issues ){ %>
              <option value=<%=issue._id%>> <%=issue._id%> </option>
              <% } %>
            </select>
            <button type="submit" class="btn btn-success">Lier l'user story</button>
          </form> -->

        </div>

      </div>
      <% } %>
    </div>
  </div>
</body>

</html>