<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title> Releases </title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <!-- Material Design Bootstrap -->
  <link rel="stylesheet" href="/css/mdb.min.css">
  <!-- Custom css -->
  <link rel="stylesheet" href="/css/style.css">
  <%- include('./navbar.ejs', {project: project}) %>
</head>

<body>
  <div class="inner-container rounded mb-0 col-lg-12">

    <h1> Releases </h1>

    <a href="/projects/<%= project._id %>/releases/create" class="btn btn-success"> Nouvelle release </a>
    <div class="row">
      <% for(const release of releases){ %>
      <div class="col-lg-12">

        <div class="row my-card alert-info rounded mb-0" >
          <div class="col-lg-2">
            <a href="/projects/<%= project._id %>/releases/show/<%=release._id%>">
              <h3><%=release._version%> </h3>
            </a>
          </div>
          <div class="col-lg-2">Date de la release : <%=release._date%></div>
        </div>

      </div>
      <% } %>
    </div>
  </div>
</body>

</html>